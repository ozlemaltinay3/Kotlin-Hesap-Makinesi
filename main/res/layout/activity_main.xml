<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="18dp"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.2"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="RtlCompat"/>

        <!--Constraintimizi en üstte sabitlemek için TopOf Parent Kullanılır.Wrap content ise
        bulunduğu alan içerisinde yer alan metin, resim veya bileşen kadar yer kaplar -->
    <!-- Backround Tint Arkaplan rengi verir.Top be bottomdan ise yerleştirme yaparız
     row ve column olarak ayarlama yaparak numara ve işlemler kutucuklarımızı oluştururuz-->

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintHeight_percent="0.8">

        <Button
            android:id="@+id/divide_button"
            android:text="/"
            android:backgroundTint="#FF9800"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/mult_button"
            android:text="*"
            android:layout_row="1"
            android:layout_column="3"
            android:backgroundTint="#FF9800"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/dif_button"
            android:text="-"
            android:backgroundTint="#FF9800"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/tot_button"
            android:text="+"
            android:layout_row="3"
            android:layout_column="3"
            android:backgroundTint="#FF9800"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/equal_button"
            android:text="="
            android:layout_row="4"
            android:layout_column="3"
            android:backgroundTint="#FF9800"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/mod_button"
            android:text="%"
            android:backgroundTint="#77000000"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/min_con_button"
            android:text="+/-"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="#77000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/refresh_button"
            android:text="AC"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#77000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/nine_button"
            android:text="9"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/eight_button"
            android:text="8"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/seven_button"
            android:text="7"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/six_button"
            android:text="6"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/five_button"
            android:text="5"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/four_button"
            android:text="4"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/three_button"
            android:text="3"
            android:layout_row="3"
            android:layout_column="2"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/two_button"
            android:text="2"
            android:layout_row="3"
            android:layout_column="1"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/one_button"
            android:text="1"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/coma_button"
            android:text=","
            android:layout_row="4"
            android:layout_column="2"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/zero_button"
            android:text="0"
            android:layout_row="4"
            android:layout_column="1"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/dub_zero_button"
            android:text="00"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="#3B000000"
            android:layout_rowWeight="0.2"
            android:layout_columnWeight="0.25"/>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>